@model IEnumerable<ProductMvc.Models.OtherService>

@{
    ViewBag.Title = "Bảng giá dịch vụ khác";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bảng giá dịch vụ khác</h2>

<p>
    @Html.ActionLink("Thêm dịch vụ khác", "Create")
</p>
<table>
    <tr>
        <th class="col-xs-3 text-center">
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th class="col-xs-3 text-right">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col-xs-3 text-left">
            @Html.DisplayFor(modelItem => item.ServiceName)
        </td>
        <td class="col-xs-3 text-right">
            @item.Price.ToString("#,#0.#;-#,#0.#")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OtherServiceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OtherServiceId })
        </td>
    </tr>
}

</table>
