<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="@Styles.Url("~/css")" rel="stylesheet" type="text/css" />
    <link href="~/Asset/style.css" rel="stylesheet" />
    <link href="~/Asset/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body style="padding-top:70px;">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed in" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>

                </button>
                <a class="navbar-brand" href="/">Khách sạn XXX</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    @if (this.User.Identity.Name == "admin")
                    {
                        <li><a href="/InOut/Index"><i class=" fa fa-exchange"></i> Quản lý vào/ra</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <i class="fa fa-list-alt"></i> Báo cáo <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Report/Index"><i class="fa fa-list-alt"></i> Báo cáo doanh thu</a></li>
                                <li><a href="/ReportDetail/Index"><i class="fa fa-list-alt"></i> Báo cáo chi tiết</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("LogOnPartial")
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="wrap">
        <div class="main-content">
            <div class="container">
                @RenderBody()
            </div><!-- /.container -->
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
    <script src="~/Scripts/modernizr-2.5.3.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.number.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $.ajaxSetup({
            statusCode: {
                401: function () {
                    window.location.href = "~/Account/LogOn";
                }
            }
        });
    </script>
    @RenderSection("scripts", required: false)

    <footer class="footer">
        <div class="container">
            <div class="text-center center-block">
                <p class="txt-railway">- Khách Sạn XXX -</p>
                <br />
                <a href="https://www.facebook.com/langminh.windows"><i id="social-fb" class="fa fa-facebook-square fa-3x social"></i></a>
                <a href="https://twitter.com/LangMinhDz"><i id="social-tw" class="fa fa-twitter-square fa-3x social"></i></a>
                <a href="https://plus.google.com/"><i id="social-gp" class="fa fa-google-plus-square fa-3x social"></i></a>
                <a href="mailto:langminh28101996@gmail.com"><i id="social-em" class="fa fa-envelope-square fa-3x social"></i></a>
            </div>
            <hr>
        </div>
    </footer>
</body>
</html>
